#5
#Get a random number, if the number is EVEN print RIGHT, and if the number is ODD print LEFT
#Do this ten times then print out how many left and rights

import random

def check_even_odd():
    """Generates a random number, checks if it's even or odd, and prints 'RIGHT' or 'LEFT'."""
    left_count = 0
    right_count = 0

    for _ in range(10):
        number = random.randint(1, 100)  # Generates a random integer between 1 and 100
        if number % 2 == 0:
            print("RIGHT")
            right_count += 1
        else:
            print("LEFT")
            left_count += 1

    print(f"\nTotal LEFTs: {left_count}")
    print(f"Total RIGHTs: {right_count}")
